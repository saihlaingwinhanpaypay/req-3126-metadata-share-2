<aura:component implements="flexipage:availableForAllPageTypes" access="global">
    <aura:attribute name="latitude" type="Decimal"/>
    <aura:attribute name="longitude" type="Decimal"/>
    <aura:attribute name="readonly" type="Boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <!-- Lightning Message Service -->
    <lightning:messageChannel type="MapLocationChange__c" 
                             aura:id="mapLocationChannel" 
                             onMessage="{!c.handleLocationMessage}"/>
    
    <!-- LWC -->
    <c:mpMapPicker aura:id="mapPicker" 
                   latitude="{!v.latitude}" 
                   longitude="{!v.longitude}"
                   readonly="{!v.readonly}"/>
</aura:component>